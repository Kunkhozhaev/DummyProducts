<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.DummyProducts" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->
        <!-- <item name="colorPrimary">@color/my_dark_primary</item> -->
    </style>

    <style name="ProductTitle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="ProductDescription">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="ProductPrice">
        <item name="android:textColor">@color/light_green</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="ProductPriceWithoutDiscount">
        <item name="android:textColor">@color/light_gray</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="ProductDiscount">
        <item name="android:textColor">@color/light_red</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="ProductRating">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="StockCount">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="drawableStartCompat">@drawable/ic_stock_dark_theme</item>
    </style>

    <style name="MyToolbar" parent="Widget.AppCompat.Toolbar">
        <item name="navigationIcon">@drawable/ic_arrow_back_dark_theme</item>
    </style>
</resources>